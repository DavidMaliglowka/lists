rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Usernames mapping: username -> { email, uid }
    match /usernames/{username} {
      // Public read needed for login (resolving username -> email)
      allow read: if true;
      
      // Authenticated users can claim a username (create) or release it (delete)
      // Must link to their own UID
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow delete: if request.auth != null && resource.data.uid == request.auth.uid;
    }

    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.data.size() < 200 * 1024
                   // Added 'username' to allowed fields
                   && request.resource.data.keys().hasOnly(['fileSystem', 'settings', 'username']);
    }
  }
}
